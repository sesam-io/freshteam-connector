{
  "_id": "{{@ system @}}-{{@ datatype @}}-collect",
  "add_namespaces": false,
  "sink": {
    "set_initial_offset": "onload"
  },
  "source": {
    "operation": "{{@ datatype @}}-list",
    "supports_since": false,
    "system": "{{@ system @}}",
    "type": "rest"
  },
  "transform": [
    {
      "rules": {
        "default": [
          [
            "copy",
            "*"
          ],
          [
            "add",
            "$last-modified",
            [
              "datetime",
              "_S.updated_at"
            ]
          ]
        ]
      },
      "type": "dtl"
    }
  ],
  "type": "pipe"
}